{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "classic",
    "noImplicitAny": true,
    "outDir": "src/dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "src",
    "sourceMap": false,
    "target": "ES2015"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
